{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "dist",

    // Compila para CommonJS (compat√≠vel com api/index.cjs)
    "module": "CommonJS",
    "moduleResolution": "Node",

    // üîß Desliga a restri√ß√£o que est√° te quebrando:
    "verbatimModuleSyntax": false,

    // Facilita import default de libs CJS (ex.: jsonwebtoken)
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "target": "ES2022",
    "skipLibCheck": true
  },

  // N√£o precisamos compilar testes para o deploy
  "exclude": ["src/**/*.spec.ts"]
}
